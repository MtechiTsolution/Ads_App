<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity7">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/jazzcash">

            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/gpay">

            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/easypaisa">

            </ImageView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_margin="7dp"
            android:layout_marginTop="20dp"
            android:text="Card holder Name">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Name"
                    android:paddingRight="7dp"
                    android:paddingTop="10dp"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/person"
                    android:id="@+id/acnt" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_margin="7dp"
            android:text="Card holder Account Number">

        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:paddingTop="10dp"
                    android:background="@null"
                    android:maxLength="13"
                    android:paddingRight="7dp"
                    android:paddingLeft="10dp"
                    android:hint="XXXXXXXXXXXXX"
                    android:drawableRight="@drawable/call"
                    android:id="@+id/phnmber">
                </EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_margin="7dp"
            android:text="Enter Valid  Pin">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_height="50dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:orientation="horizontal">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:hint="XXXX"
                    android:paddingTop="10dp"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:paddingRight="7dp"
                    android:drawableRight="@drawable/ic_fiber_pin_black_24dp"
                    android:id="@+id/epin">
                </EditText>
            </LinearLayout>
        </androidx.cardview.widget.CardView>








        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_margin="20dp"
            android:drawableRight="@drawable/next"
            android:background="@drawable/nextback"
            android:layout_gravity="center"
            android:id="@+id/okdrw"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget pin"
            android:layout_marginTop="12dp"
            android:textColor="#3D5AFE"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:id="@+id/fgpin"></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/visa">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/master">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/paypal">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/paytm">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/goolwalet">
            </ImageView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:src="@drawable/amazon">
            </ImageView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:layout_height="40dp">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1p"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"
                tools:ignore="MissingConstraints" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>