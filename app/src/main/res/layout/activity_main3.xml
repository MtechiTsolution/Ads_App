<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".MainActivity3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"

            android:layout_marginTop="70dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile "
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="serif"
                android:textStyle="bold"
                >

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/man"
                android:layout_gravity="center"
                >

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="90dp"
                    android:background="#000"
                    app:rippleColor="#000"
                    android:fadingEdgeLength="6dp"
                    android:elevation="10dp"
                    app:fabCustomSize="35dp"
                    app:maxImageSize="17dp"
                    android:scaleType="center"
                    android:backgroundTint="#fff"
                    android:src="@drawable/edit"
                    android:layout_marginLeft="140dp"
                    android:id="@+id/pfpic"
                    >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileid"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/love"
                    android:clickable="true"
                    android:elevation="5dp"
                    android:padding="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/man"
                    app:civ_border_color="#FFFFFFFF"
                    app:civ_border_width="3dp" />


            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Set Your Name"
                android:gravity="center"
                android:textColorHint="#97FFFFFF"
                android:layout_margin="20dp"
                android:textColor="#000"
                android:maxLength="17"
                android:fontFamily="serif-monospace"
                android:paddingLeft="15dp"
                android:id="@+id/nme"
                ></EditText>

            <Button
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:id="@+id/sve"
                android:fontFamily="serif-monospace"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:drawableStart="@drawable/next"
                android:background="@drawable/nextback"
                android:drawableLeft="@drawable/next" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>