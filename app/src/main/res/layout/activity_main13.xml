<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C60303"
        android:textSize="25dp"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:fontFamily="serif"
        android:text="Your Investments "
        android:layout_gravity="center"
        android:textStyle="bold"
        android:gravity="center"
        tools:ignore="MissingConstraints">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Invest and  Earn more.You save Your money.\n !!❗">

    </TextView>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="10dp"
        android:foregroundGravity="center"
        android:layout_height="wrap_content"
        >
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="270dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_marginTop="14dp"
                android:layout_height="90dp"
                app:lottie_fileName="process.json"
                app:lottie_loop="true"
                android:layout_gravity="center"
                app:lottie_autoPlay="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C60303"
                android:textSize="25dp"
                android:fontFamily="serif"
                android:text="25$"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="MissingConstraints">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginRight="7dp"
                android:text="The withdraw process is currently underway.  Please wait one to two days. We're sorry, your account is being verified.  As soon as your money will be transferred to your account.\n\n Thank you ❗">

            </TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/backbuton"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textStyle="bold"
                android:shadowRadius="1"
                android:shadowColor="#1F3CE3"
                android:layout_marginTop="20dp"
                android:text="Ok"
                android:textAllCaps="false"
                android:id="@+id/ok25"

                >

            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                >

            </TextView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="100dp"
                    android:layout_marginTop="14dp"
                    android:layout_height="90dp"
                    app:lottie_fileName="process.json"
                    app:lottie_loop="true"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#C60303"
                    android:textSize="25dp"
                    android:fontFamily="serif"
                    android:text="50$"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:ignore="MissingConstraints">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_marginRight="7dp"
                    android:text="The withdraw process is currently underway.  Please wait one to two days. We're sorry, your account is being verified.  As soon as your money will be transferred to your account.\n\n Thank you ❗">

                </TextView>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/backbuton"
                    android:layout_gravity="center"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:shadowRadius="1"
                    android:shadowColor="#1F3CE3"
                    android:layout_marginTop="20dp"
                    android:text="Ok"
                    android:textAllCaps="false"
                    android:id="@+id/ok50"

                    >

                </Button>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="30dp"
                    >

                </TextView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="-10dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_marginTop="14dp"
                android:layout_height="90dp"
                app:lottie_fileName="process.json"
                app:lottie_loop="true"
                android:layout_gravity="center"
                app:lottie_autoPlay="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C60303"
                android:textSize="25dp"
                android:fontFamily="serif"
                android:text="100$"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="MissingConstraints">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_marginRight="7dp"
                android:text="The withdraw process is currently underway.  Please wait one to two days. We're sorry, your account is being verified.  As soon as your money will be transferred to your account.\n\n Thank you ❗">

            </TextView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/backbuton"
                android:layout_gravity="center"
                android:shadowDx="0"
                android:shadowDy="0"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textStyle="bold"
                android:shadowRadius="1"
                android:shadowColor="#1F3CE3"
                android:layout_marginTop="20dp"
                android:text="Ok"
                android:textAllCaps="false"
                android:id="@+id/ok100"

                >
            </Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                >

            </TextView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</HorizontalScrollView>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>