<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
     android:background="#000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_viewr"
            android:layout_width="100dp"
            android:layout_height="90dp"
            app:lottie_fileName="netword.json"
            app:lottie_loop="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C60303"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:text="Networking Error"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="MissingConstraints">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:text="Your Internet connection is Week or Out of Coverage.  Please confirm network presence and try again.\n\n Thanks ‼️">

        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/nextback"
            android:layout_gravity="right"
            android:shadowDx="0"
            android:shadowDy="0"
            android:textColor="#000"
            android:textStyle="bold"
            android:shadowRadius="2"
            android:shadowColor="#3D5AFE"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:text="Try Again"
            android:textAllCaps="false"
            android:id="@+id/neteror"

            >

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            >

        </TextView>
    </LinearLayout>

</LinearLayout>