<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_viewr"
            android:layout_width="100dp"
            android:layout_marginTop="14dp"
            android:layout_height="90dp"
            app:lottie_fileName="process.json"
            app:lottie_loop="true"
            android:layout_gravity="center"
            app:lottie_autoPlay="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C60303"
            android:textSize="25dp"
            android:fontFamily="serif"
            android:text="Withdraw Processing"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"
            tools:ignore="MissingConstraints">
        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_marginRight="7dp"
            android:text="The withdraw process is currently underway.  Please wait one to two days. We're sorry, your account is being verified.  As soon as your money will be transferred to your account.\n\n Thank you ❗">

        </TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/backbuton"
            android:layout_gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:textColor="#fff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:shadowRadius="1"
            android:shadowColor="#1F3CE3"
            android:id="@+id/asdf"
            android:layout_marginTop="20dp"
            android:text="Ok"
            android:textAllCaps="false"

            >

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            >

        </TextView>
    </LinearLayout>

</LinearLayout>