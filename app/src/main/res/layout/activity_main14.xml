<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main14Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_margin="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF3D00"
                android:layout_margin="7dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="25dp"
                android:fontFamily="@font/roboto_bolditalic"
                android:layout_marginTop="20dp"
                android:text="Trusted people can invest to earn more ">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_weight="1"
                android:elevation="15dp"
                android:layout_margin="10dp"
                android:id="@+id/gpayz"
                android:layout_height="100dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView

                        android:layout_width="391dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/gpay">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_weight="1"
                android:elevation="15dp"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                android:id="@+id/jaz"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView

                        android:layout_width="391dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/jazzcash">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_weight="1"
                android:elevation="15dp"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                android:id="@+id/esp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView

                        android:layout_width="391dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/easypaisa">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_weight="1"
                android:elevation="15dp"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                android:id="@+id/paypal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/paypal2">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:background="#fff"
                android:layout_weight="1"
                android:elevation="15dp"
                android:layout_margin="10dp"
                android:layout_height="100dp"
                android:id="@+id/bank"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:src="@drawable/mcb">
                    </ImageView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>





</LinearLayout>